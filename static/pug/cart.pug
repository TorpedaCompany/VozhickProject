	body
		include header.pug
		include modal.pug
		.wrapper
			div(style='flex: 1;')
				.container-cart
					.title-cart Оформление заказа
					.main-eat-container-cart
						#main-eat-container-cart.main-eat-container-cart
							.clear-cart Ваша корзина пуста
						#container-all-price-eat-cart.container-all-price-eat-cart Общая стоимость: 0 руб.
					.main-container-data-cart
						.container-data-cart
							.container-input
								span.fa.fa-location-arrow
								.group
									input.input-style.input-login-authorization(placeholder='Улица', type='text', required='')
									span.bar
							.container-input
								span.fa.fa-home
								.group
									input.input-style.input-login-authorization(placeholder='Дом', type='text', required='')
									span.bar
							.container-input
								span.fa.fa-angle-right
								.group
									input.input-style.input-login-authorization(placeholder='Подъезд', type='text', required='')
									span.bar
						.container-data-cart
							.container-input
								span.fa.fa-angle-right
								.group
									input.input-style.input-login-authorization(placeholder='Этаж', type='text', required='')
									span.bar
							.container-input
								span.fa.fa-angle-right
								.group
									input.input-style.input-login-authorization(placeholder='Квартира', type='text', required='')
									span.bar
							.container-input
								span.fa.fa-mobile
								.group
									input.input-style.input-login-authorization(placeholder='Телефон', type='text', required='')
									span.bar
						.container-data-cart
							.container-input
								span.fa.fa-envelope
								.group
									input.input-style.input-login-authorization(placeholder='Email', type='text', required='')
									span.bar
							.container-input
								span.fa.fa-comments
								.group
									input.input-style.input-login-authorization(placeholder='Коментарий', type='text', required='')
									span.bar
							.container-input
								span.fa.fa-ticket
								.group
									input.input-style.input-login-authorization(placeholder='Промокод', type='text', required='')
									span.bar
					.container-button-cart
						.button-cart Очистить корзину
						#button-cart-post.button-cart.button-cart-red Оформить
		include footer.pug
		script(src='../js/hamburger-menu.js')
		script(src='../js/open-modal.js')
		script(src='../js/cart-generate-block.js')
		script(src='../js/delete-dish-cart.js')
		script(src='../js/plus-and-minus.js')
